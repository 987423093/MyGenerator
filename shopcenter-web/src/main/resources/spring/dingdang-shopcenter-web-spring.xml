<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		     http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
             http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
       default-lazy-init="false">

    <context:annotation-config/>

    <context:component-scan base-package="com.dingdang.shopcenter"/>

    <context:property-placeholder location="classpath:/config/dingdang-shopcenter-web.properties" ignore-unresolvable="true"/>

    <import resource="classpath:/spring/dingdang-shopcenter-biz-service-impl-spring.xml"/>

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="${dubbo_application_name}" logger="slf4j"/>
    <!-- 使用 zookeeper 广播注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${dubbo_registry_address}"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="${dubbo_protocol_name}" port="${dubbo_protocol_port}" accesslog="true"/>
    <!-- dubbo监控地址 -->
    <dubbo:monitor protocol="registry"/>

    <!-- 引入需要的dubbo服务 -->
    <dubbo:reference id="baseConfigFacade"
                     interface="com.dingdang.base.configcenter.facade.interfaces.BaseConfigFacade"
                     check="false"/>
    <!-- 声明需要暴露的服务接口 -->

    <!-- 商城中心 -->
    <dubbo:service interface="com.dingdang.shopcenter.common.facade.interfaces.MallFacadeService"
                   ref="mallFacadeServiceImpl"
                   timeout="20000"/>
    <bean id="mallFacadeServiceImpl" class="com.dingdang.shopcenter.biz.service.impl.MallFacadeServiceImpl"/>
    <!-- banner -->
    <dubbo:service interface="com.dingdang.shopcenter.common.facade.interfaces.BannerFacadeService"
                   ref="bannerFacadeServiceImpl"
                   timeout="20000"/>
    <bean id="bannerFacadeServiceImpl" class="com.dingdang.shopcenter.biz.service.impl.BannerFacadeServiceImpl"/>
    <!-- 店铺 -->
    <dubbo:service interface="com.dingdang.shopcenter.common.facade.interfaces.ShopFacadeService"
                   ref="shopFacadeServiceImpl"
                   timeout="20000"/>
    <bean id="shopFacadeServiceImpl" class="com.dingdang.shopcenter.biz.service.impl.ShopFacadeServiceImpl"/>
    <!-- 商城栏目 -->
    <dubbo:service interface="com.dingdang.shopcenter.common.facade.interfaces.ColumnFacadeService"
                   ref="columnFacadeServiceImpl"
                   timeout="20000"/>
    <bean id="columnFacadeServiceImpl" class="com.dingdang.shopcenter.biz.service.impl.ColumnFacadeServiceImpl"/>
    <!-- 栏目商品关联 -->
    <dubbo:service interface="com.dingdang.shopcenter.common.facade.interfaces.ColumnGoodsFacadeService"
                   ref="columnGoodsFacadeServiceImpl"
                   timeout="20000"/>
    <bean id="columnGoodsFacadeServiceImpl" class="com.dingdang.shopcenter.biz.service.impl.ColumnGoodsFacadeServiceImpl"/>

    <!-- 快捷导航 -->
    <dubbo:service interface="com.dingdang.shopcenter.common.facade.interfaces.NavigationFacadeService"
                   ref="navigationFacadeServiceImpl"
                   timeout="20000"/>
    <bean id="navigationFacadeServiceImpl" class="com.dingdang.shopcenter.biz.service.impl.NavigationFacadeServiceImpl"/>
    <!-- 商城导航关联 -->
    <dubbo:service interface="com.dingdang.shopcenter.common.facade.interfaces.MallNavigationFacadeService"
                   ref="mallNavigationFacadeServiceImpl"
                   timeout="20000"/>
    <bean id="mallNavigationFacadeServiceImpl" class="com.dingdang.shopcenter.biz.service.impl.MallNavigationFacadeServiceImpl"/>
</beans>